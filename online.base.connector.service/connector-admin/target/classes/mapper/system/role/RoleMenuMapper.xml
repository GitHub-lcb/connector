<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhaogang.connector.admin.module.system.role.dao.RoleMenuDao">
    <delete id="deleteByRoleId">
        delete
        from t_role_menu
        where role_id = #{roleId}
    </delete>
    <select id="queryMenuIdByRoleId" resultType="java.lang.Long">
        select menu_id
        from t_role_menu
        where role_id = #{roleId}
    </select>
    <select id="queryAllRoleMenu"
            resultType="com.zhaogang.connector.admin.module.system.role.domain.entity.RoleMenuEntity">
        select *
        from t_role_menu
    </select>

    <select id="selectMenuListByRoleIdList"
            resultType="com.zhaogang.connector.admin.module.system.menu.domain.entity.MenuEntity">
        SELECT
        distinct m.*
        from t_menu m
        left join t_role_menu rm on rm.menu_id = m.menu_id
        <where>
            <if test="deletedFlag != null">
                and m.deleted_flag = #{deletedFlag}
            </if>
            <if test="roleIdList != null and roleIdList.size > 0">
                and rm.role_id in
                <foreach collection="roleIdList" open="(" close=")" item="item" separator=",">
                    #{item}
                </foreach>
            </if>
        </where>
        ORDER BY m.sort ASC
    </select>
</mapper>